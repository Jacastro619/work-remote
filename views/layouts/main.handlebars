<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
      integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Work Remote</title>
  </head>

  <body>
    <!-- Nav -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
      <img src="/images/work-remote-logo.png" alt="Logo" id="logo" />
      <a class="navbar-brand" href="/">Work Remote</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="#">About
              <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/jobs">See Jobs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"></a>
          </li>
        </ul>
      </div>

      {{#if loggedIn}}
        {{! If logged in display these buttons }}
        <div class="" id="buttons">
          <a href="/jobs/user/posts"><button
              type="button"
              class="btn btn-outline-warning"
              id="roundBTN"
            >My Job Listing</button></a>
          <a href="/post"><button
              type="button"
              class="btn btn-info"
              id="roundBTN"
            >Post Job</button></a>
          <button
            type="button"
            class="btn btn-success"
            id="logout-btn"
          >Logout</button>
        </div>
      {{else}}
        {{! If not logged in, display this }}
        <div class="" id="buttons">
          <a href="/login"><button
              type="button"
              class="btn btn-secondary"
              id="roundBTN"
            >Login or Sign Up</button></a>
          {{! <button type="button" class="btn btn-success" id="roundBTN">Sign Up</button> }}
        </div>
      {{/if}}
    </nav>

    <!-- Main -->
    <main class="container p-5">
      {{{body}}}
    </main>

    <!-- Script -->
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
      integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
      crossorigin="anonymous"
    ></script>
    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>