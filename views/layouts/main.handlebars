<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Work Remote</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <!-- Nav -->

    <div
      id="fields-alert"
      class="alert alert-danger custom-alert collapse"
      role="alert"
    >
      Please fill out all fields
    </div>
    <div
      id="login-alert"
      class="alert alert-danger custom-alert collapse"
      role="alert"
    >
      Invalid Username or Password
    </div>
    <div
      id="loginErr-alert"
      class="alert alert-danger custom-alert collapse"
      role="alert"
    >
      Failed to log in
    </div>
    <div
      id="email-alert"
      class="alert alert-danger custom-alert collapse"
      role="alert"
    >
      Email must be in proper email format
    </div>
    <div
      id="username-alert"
      class="alert alert-danger custom-alert collapse"
      role="alert"
    >
      Username is already in use
    </div>
    <div
      id="signup-alert"
      class="alert alert-danger custom-alert collapse"
      role="alert"
    >
      Failed to sign up
    </div>
    <div
      id="logout-alert"
      class="alert alert-danger custom-alert collapse"
      role="alert"
    >
      Cannot logout
    </div>
    <div
      id="budget-alert"
      class="alert alert-danger custom-alert collapse"
      role="alert"
    >
      Only need numeric value in budget
    </div>
    <div
      id="postErr-alert"
      class="alert alert-danger custom-alert collapse"
      role="alert"
    >
      Error while trying to retrieve data
    </div>
    <div
      id="postRetErr-alert"
      class="alert alert-danger custom-alert collapse"
      role="alert"
    >
      Error creating post
    </div>
    <div
      id="deleteErr-alert"
      class="alert alert-danger custom-alert collapse"
      role="alert"
    >
      Error in deleteing post
    </div>

    <div
      id="logout-success"
      class="alert alert-success custom-alert collapse"
      role="alert"
    >
      You have been successfully logged out
    </div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <img src="/images/work-remote-logo.png" alt="Logo" id="logo" />
      <a class="navbar-brand" href="/">Work Remote</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="#">About
              <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/jobs">See Jobs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"></a>
          </li>
        </ul>
      </div>

      {{#if loggedIn}}
        {{! If logged in display these buttons }}
        <div class="" id="buttons">
          <a href="/jobs/user/posts"><button
              type="button"
              class="btn btn-outline-warning"
              id="roundBTN"
            >My Job Listing</button></a>
          <a href="/post"><button
              type="button"
              class="btn btn-info"
              id="roundBTN"
            >Post Job</button></a>
          <button
            type="button"
            class="btn btn-success"
            id="logout-btn"
          >Logout</button>
        </div>
      {{else}}
        {{! If not logged in, display this }}
        <div class="" id="buttons">
          <a href="/login"><button
              type="button"
              class="btn btn-secondary"
              id="roundBTN"
            >Login or Sign Up</button></a>
          {{! <button type="button" class="btn btn-success" id="roundBTN">Sign Up</button> }}
        </div>
      {{/if}}
    </nav>

    <!-- Main -->
    <main class="container p-5">
      {{{body}}}
    </main>

    <!-- Script -->

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>